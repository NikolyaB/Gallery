<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_popular"
    app:startDestination="@id/popularFragment">

    <fragment
        android:id="@+id/popularFragment"
        android:name="com.example.gallery.ui.screens.populars.PopularFragment"
        android:label="Popular"
        tools:layout="@layout/fragment_gallery">
        <action
            android:id="@+id/action_popularFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.gallery.ui.screens.detailImages.InfoFragment"
        android:label=""
        tools:layout="@layout/fragment_info">
        <argument
            android:name="imageName"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
    </fragment>
</navigation>